<Window x:Class="TestNavisPlugin.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestNavisPlugin"
        mc:Ignorable="d"
        Title="InfoWindow" Height="450" Width="450">
    <Grid Margin="5">
        <TextBox x:Name="InfoBox" Text="{Binding LogInfo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextChanged="TextBox_TextChanged" VerticalScrollBarVisibility="Auto"></TextBox>
    </Grid>
</Window>
